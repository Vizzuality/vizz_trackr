<% is_new_record = form.object.new_record? %>

<%= content_tag :fieldset,
  class: 'report-parts-fields nested-fields inline-fields border border-secondary shadow p-3 mb-5 bg-white rounded',
  data: { controller: 'report-part', new_record: is_new_record } do %>
  <div class="form-group">
    <%= form.label :project_id %>
    <%= form.collection_select :project_id, @projects, :id,
      :name, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :percentage %>
    <%= form.text_field :percentage, class: 'form-control' %>
  </div>
  <li class="input">
    <%= button_tag 'Remove', type: 'button',
    class: 'btn btn-danger',
    data: { action: 'click->nested-list#removeRecord' } %>
  </li>
  <%= form.hidden_field :_destroy %>
<% end %>
