<p id="notice"><%= notice %></p>

<% content_for :title, "Projects" %>
<% if can? :create, Project %>
  <% content_for :actions,
    link_to('New Project', new_project_path, class: 'btn btn-sm btn-outline-primary') %>
<% end %>

<table class="table table-sm table-hovered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Team</th>
      <th>Contracts #</th>
      <th>Budget</th>
      <th>Costs</th>
      <th>Burn %</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <%= billable_tag(project) %>
          <%= project.name %>
        </td>
        <td><%= project.team.try(:name) %></td>
        <td><%= project.contracts.size %></td>
        <td><%= number_to_currency(project.budget) %></td>
        <td><%= number_to_currency(project.spend) %></td>
        <%= td_for_burn(project.budget, project.spend) %>
        <td>
          <%= link_to 'Show', project %>
          <% if can? :manage, project %>
            <%= link_to 'Edit', edit_project_path(project) %>
            <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
