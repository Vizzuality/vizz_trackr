<p id="notice"><%= notice %></p>

<% content_for :title, "Projects" %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Team</th>
      <th>Alias</th>
      <th>Contracts #</th>
      <th>Budget</th>
      <th>Costs</th>
      <th>%</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.team.try(:name) %></td>
        <td><%= project.alias %></td>
        <td><%= project.contracts.count %></td>
        <% budget = (project.budget.presence || 0) + project.contracts.sum(:budget) %>
        <td><%= number_to_currency(budget, unit: '€') %></td>
        <% spent = project.report_parts.sum(:cost).presence || 0 %>
        <td><%= number_to_currency(spent, unit: '€') %></td>
        <td><%= budget > 0 ? "#{((budget-spent)/budget*100).round(2)}%" : '-'%></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

