<p id="notice"><%= notice %></p>

<% content_for :title, "Projects" %>
<% content_for :actions,
  link_to('New Project', new_project_path, class: 'btn btn-sm btn-outline-primary') %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Team</th>
      <th>Contracts #</th>
      <th>Budget</th>
      <th>Costs</th>
      <th>Burn %</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %> <%= billable_tag(project) %></td>
        <td><%= project.team.try(:name) %></td>
        <td><%= project.contracts.size %></td>
        <td><%= number_to_currency(project.budget, unit: '€') %></td>
        <td><%= number_to_currency(project.spend, unit: '€') %></td>
        <%= td_for_burn(project.budget, project.spend) %>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
