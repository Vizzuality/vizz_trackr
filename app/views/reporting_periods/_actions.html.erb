<% content_for :actions do
  actions = link_to('Show', reporting_period, class: 'btn btn-sm btn-outline-info')
    .concat(link_to('Download', reporting_period_path(reporting_period, format: 'csv'), class: 'btn btn-sm btn-outline-info'))
  if can? :manage, reporting_period
    actions = actions.concat(link_to('Edit', edit_reporting_period_path(reporting_period), class: 'btn btn-sm btn-outline-primary'))
  end
  actions.concat(link_to('Back', reporting_periods_path, class: 'btn btn-sm btn-outline-secondary'))
end %>
