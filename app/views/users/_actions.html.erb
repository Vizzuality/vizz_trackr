<% content_for :actions do %>
  <% actions = link_to('Show', user, class: 'btn btn-sm btn-outline-primary')
    .concat(link_to('Reports', reports_user_path(user), class: 'btn btn-sm btn-outline-primary'))

    if can? :edit, user
      actions = actions
        .concat(link_to('Edit User', edit_user_path(user), class: 'btn btn-sm btn-outline-primary'))
    end
    actions.concat(link_to('Back', users_path, class: 'btn btn-sm btn-outline-secondary'))
end    %>

