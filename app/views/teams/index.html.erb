<% content_for :title, "Teams" %>
<% if can? :create, Team %>
  <% content_for :actions,
    link_to('New Team', new_team_path, class: 'btn btn-sm btn-outline-primary') %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="main-card mb-3 card">
      <div class="card-body">
        <table class="table table-lg table-hover table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Members count</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @teams.each do |team| %>
              <tr>
                <td><%= team.name %></td>
                <td><%= team.users.count %></td>
                <td>
                  <%= link_to 'Show', team %>
                  <% if can? :manage, team %>
                    |
                    <%= link_to 'Edit', edit_team_path(team) %>
                    |
                    <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %>
                  <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
