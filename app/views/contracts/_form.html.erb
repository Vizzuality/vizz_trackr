<%= form_with(model: contract, local: true) do |form| %>
  <% if contract.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contract.errors.count, "error") %> prohibited this contract from being saved:</h2>

      <ul>
        <% contract.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :project_id %>
    <%= form.collection_select :project_id, @projects, :id, :name, {selected: contract.project_id}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :budget %>
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text">â‚¬</div>
      </div>
      <%= form.text_field :budget, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :aasm_state, value: "Contract state" %>
    <%= form.select :aasm_state, @states, {selected: contract.aasm_state}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.date_select :start_date, {}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :alias_ist %>
    <%= form.text_field :alias_list, class: 'form-control' %>
    <small class="form-text text-muted">
      Comma separated list of alternative names [e.g.: "CW, Climate Watch"]
    </small>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
