<% content_for :title, "Contract - #{@contract.name} - #{@contract.aasm_state.humanize}" %>
<%= render 'actions', contract: @contract %>

<% if @contract.start_date <= Date.parse('01/10/2018') || @contract.end_date <= Date.parse('01/10/2018') %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    VizzTrackr only includes reporting data since October 2018, so the data for
    this contract is probably not complete, please take it with a pinch of salt.
    Data review and amendment is currently underway.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6">
    <div class="main-card mb-3 card">
      <div class="card-body">
        <p>
          <strong>Project:</strong> <%= link_to @contract.project.name, @contract.project  %>
          <%= billable_tag(@contract.project) %>
        </p>
        <p>
          <strong>Code:</strong> <%= @contract.code %>
        </p>
        <% if @contract.notes.present? %>
          <p>
            <strong>Notes:</strong> <%= @contract.notes %>
          </p>
        <% end %>
        <% if @contract.summary.present? %>
          <p>
            <strong>Summary:</strong> <%= @contract.summary %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="main-card mb-3 card">
      <div class="card-body">
        <p>
          <strong>Start Date:</strong> <%= @contract.start_date&.strftime('%d/%B/%Y') %>
        </p>
        <p>
          <strong>End Date:</strong> <%= @contract.end_date&.strftime('%d/%B/%Y') %>
        </p>
        <p><strong>Budget:</strong> <%= @contract.budget ? number_to_currency(@contract.budget) : "Not defined" %></p>
        <h5 class="card-title">Burn</h5>
        <p>
          <strong>Reported burn:</strong>
          <%= number_to_currency(@contract.total_burn) %>
        </p>
        <% if @contract.full_reports.where(report_estimated: true).any? %>
          <p>
            <strong>Burn with projections:</strong>
            <%= number_to_currency(@contract.total_burn(true)) %>
          </p>
        <% end %>
        <% if @contract.percent_complete && @contract.budget %>
          <p>
            <strong>Burn based on estimated completion percentage</strong>
            <%= number_to_currency(@contract.completion_burn) %> (<%= result_with_color(@contract.completion_burn_percentage) %>%)
          </p>
        <% end %>
        <% if @contract.is_billable? %>
          <div class="mt-3 row">
            <div class="col-sm-12 col-md-6">
              <div class="widget-content p-0">
                <div class="widget-content-outer">
                  <div class="widget-content-wrapper">
                    <div class="widget-content-left">
                      <div class="widget-numbers text-dark"><%= @contract.burn_percentage %>%</div>
                    </div>
                  </div>
                  <div class="widget-progress-wrapper mt-1">
                    <div class="progress-bar-xs progress-bar-animated-alt progress">
                      <div class="progress-bar bg-info" role="progressbar" aria-valuenow="<%= @contract.burn_percentage %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @contract.burn_percentage %>%;"></div>
                    </div>
                    <div class="progress-sub-label">
                      <div class="sub-label-left font-size-md">Reported burn</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-sm-12 col-md-6">
              <div class="widget-content p-0">
                <div class="widget-content-outer">
                  <div class="widget-content-wrapper">
                    <div class="widget-content-left">
                    <div class="widget-numbers text-dark"><%= @contract.burn_percentage(true) %>%</div>
                    </div>
                  </div>
                  <div class="widget-progress-wrapper mt-1">
                    <div class="progress-bar-xs progress-bar-animated-alt progress">
                      <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="<%= @contract.burn_percentage(true) %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @contract.burn_percentage(true) %>%;"></div>
                    </div>
                    <div class="progress-sub-label">
                      <div class="sub-label-left font-size-md">Burn with projection</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="main-card mb-3 card">
      <div class="card-body">
        <h5 class="card-title"><%= @contract.is_billable? ? "Project Burn" : "Days spent" %></h5>
        <div class="widget-chart-wrapper widget-chart-wrapper-lg opacity-10 m-0">
          <%= line_chart @data, prefix: @contract.is_billable? ? 'â‚¬' : nil, thousands: "," %>
        </div>
      </div>
    </div>
  </div>
</div>



<div class="row">
  <div class="col-md-12">
    <div class="main-card mb-3 card">
      <div class="card-body">
        <h5 class="card-title">Time per role</h5>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Role</th>
              <th>%</th>
              <th>Total days</th>
            </tr>
          </thead>
          <tbody>
            <% @roles.each do |role| %>
              <% role_days = @days_per_role.where(role_id: role.id).first&.days || 0 %>
              <tr>
                <td><%= link_to role.name, role %></td>
                <td><%= @total_days && (role_days / @total_days.to_f * 100).round(2) %>%</td>
                <td><%= role_days  %></td>
              </tr>
            <% end %>
            <tr>
              <td colspan="2"><strong>Total</strong></td>
              <td><%= @total_days %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="main-card mb-3 card">
      <div class="card-body">
        <h5 class="card-title">Reports</h5>
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>Period</th>
              <th>User</th>
              <th>Team</th>
              <th>Role</th>
              <th>Percentage</th>
              <th>Days</th>
              <th>Cost</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @contract.full_reports.joins(:reporting_period).
               order("reporting_periods.date DESC").each do |report| %>
              <tr>
                <td><%= report.reporting_period_name %></td>
                <td><%= report.user_name %></td>
                <td><%= report.team_name %></td>
                <td><%= report.role_name %></td>
                <td><%= report.percentage %>%</td>
                <td><%= report.days %></td>
                <td><%= number_to_currency(report.cost) %></td>
                <% if can? :manage, report.report %>
                  <td><%= link_to 'Edit', edit_report_path(report.report) %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
